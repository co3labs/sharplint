{
  "name": "sharplint",
  "version": "0.0.6",
  "description": "Sharplint ensures consistent code quality across all your projects using optimal ESLint, Prettier, Type Checks and Husky configuration",
  "main": "index.js",
  "bin": {
    "sharplint": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.json --outDir ./bin",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "release": "npm run build && npm publish"
  },
  "keywords": ["eslint", "prettier", "typescript", "husky", "lint-staged"],
  "author": "co3 <co3.devs@gmail.com> (https://co3.ooo/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
